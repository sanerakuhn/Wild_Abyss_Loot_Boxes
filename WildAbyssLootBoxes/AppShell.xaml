<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Wild_Abyss_Loot_Boxes.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Wild_Abyss_Loot_Boxes"
    Shell.FlyoutBehavior="Disabled"
    Title="Wild Abyss Loot Box Generator"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource Light_BackgroundColor}, Dark={StaticResource Dark_BackgroundColor}}"
    ForegroundColor="{AppThemeBinding Light={StaticResource Light_TextColor}, Dark={StaticResource Dark_TextColor}}"
    BackgroundColor="{AppThemeBinding Light={StaticResource Light_BackgroundColor}, Dark={StaticResource Dark_BackgroundColor}}"
    
    NavigationPage.HasBackButton="False">

    

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
</Shell>